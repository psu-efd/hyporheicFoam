FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

momentumSource
{
    //customized fvOption to write the pressure gradient to a dictionary.
    type           surfMeanVelocityForce;
    active          yes;

    surfMeanVelocityForceCoeffs
    {
        selectionMode   all;

        fields      (U);
        Ubar            (0.2 0 0);
    }
}


